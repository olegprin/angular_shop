<%= bootstrap_form_for @messagestoadministrator, layout: :vertical, label_col: "col-sm-2", control_col: "col-sm-6" do |f| %>
  <%if user_signed_in?%>
    <%= f.text_field :email, value: "#{current_user.email}", size: "40"%>
  <%else%>
    <%= f.text_field :email, size: "40"%>
    <%= f.text_field :telephone, size: "40"%>
  <%end%>
    <%= f.text_field :name,label: "Title", size: "40"%>
    <%= f.text_area :message, size: "39x5"%>
    <%= f.submit label: "Create message"%>
<%end%>