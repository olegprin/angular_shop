    = ui_button 'back', "Back", root_path

  %div{:class=>"col-md-6"} 
    %p
      %b Name:
      = @order.name
    %p
      %b Adress:
      = @order.address
    %p
      %b Email:
      = @order.email
    %p
      %b Pay type:
      = @order.pay_type
    %p
      %b Total price:
      = @order.total_price
