Blog.controller('UsersCtrl',[ 
  '$scope', 'postData'
  ($scope, postData) ->
 

    $scope.login = (user) ->
      $scope.authError = null
      postData.login(user.email, user.password).then ((response) ->
        if !response
          $scope.authError = 'Credentials are not valid'
        else
          $scope.authError = 'Success!'
        return
      ), (response) ->
        $scope.authError = 'Server offline, please try later'
        return
      return

    $scope.logout = (user) ->

    $scope.register = (user) ->
      $scope.authError = null
      postData.register(user.email, user.password, user.confirm_password).then ((response) ->
        console.log response
        return
      ), (response) ->
        errors = ''
        $.each response.data.errors, (index, value) ->
          errors += index.substr(0, 1).toUpperCase() + index.substr(1) + ' ' + value + ''
          return
        $scope.authError = errors
        return
      return

    return

]);


